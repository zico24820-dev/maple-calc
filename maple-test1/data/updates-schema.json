{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Updates API Response",
  "type": "object",
  "properties": {
    "updates": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "version": { "type": "string" },
          "date": { "type": "string", "format": "date" },
          "notes": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "required": ["version", "date", "notes"],
        "additionalProperties": false
      }
    }
  },
  "required": ["updates"],
  "additionalProperties": false
}